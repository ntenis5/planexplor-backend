{
  "name": "planexplor-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --loader ts-node/esm src/app.ts",
    "build": "tsc --project tsconfig.prod.json",
    "start": "NODE_ENV=production node --max-old-space-size=4096 --v8-pool-size=4 dist/app.js",
    "migrate": "npx supabase db push",
    "cache:setup": "NODE_ENV=production node dist/scripts/setupCacheSystem.js",
    "deploy:full": "npm run build && npm run migrate && npm run cache:setup"
  },
  "dependencies": {
    "express-async-errors": "^3.1.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.38.0",
    "stripe": "^13.3.0",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "uuid": "^9.0.1",
    "geoip-lite": "^1.4.7",
    "pino": "^8.17.3",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.17"
  }
}
