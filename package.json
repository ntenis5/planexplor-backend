{
  "name": "planexplor-backend",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').cpSync('src/public', 'dist/public', { recursive: true, force: true })\" || echo 'Build completed'",
    "start": "node --env-file=.env dist/app.js",
    "dev": "tsx watch --env-file=.env src/app.ts",
    "clean": "rm -rf dist && mkdir dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "redis": "^4.6.10",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-async-errors": "^3.1.1",
    "pino": "^8.17.3",
    "pino-http": "^9.0.0",
    "cluster": "^0.7.7"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5"
  }
}
