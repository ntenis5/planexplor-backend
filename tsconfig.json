{
  "compilerOptions": {
    "target": "NodeNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "allowImportingTsExtensions": true,
    "noEmitOnError": true 
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules", "dist"]
}
