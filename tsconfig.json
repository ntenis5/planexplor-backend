{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types"] // Shto ketu dosjen tuaj te re @types
  },
  "include": ["src/**/*", "@types/**/*"], // Sigurohuni qe te perfshije skedarin e ri .d.ts
  "exclude": ["node_modules", "dist"]
}
