{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci --only=production && npm run build"
  },
  "deploy": {
    "startCommand": "node dist/app.js",
    "healthcheckPath": "/health",
    "restartPolicyType": "ALWAYS",
    "env": {
      "NODE_ENV": "production",
      "PORT": "8080"
    }
  }
}
